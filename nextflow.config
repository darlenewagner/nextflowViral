params {
  querydir = "$PWD/D70_paired_files/*_R{1,2}*.fastq"
//Note 1: reference basename generated by bowtie-build output
  reference = "$PWD/D70_reference_genome/MT081369_JPN_1989-23292"
  intermdir = "$PWD/bowtieConsensInterm"
  consensdir = "$PWD/bowtieConsensOutput"
  statsdir = "$PWD/bamStats"
  threads = 8
//Note 2: strictPairing is true to run bowtie2 to map paired reads only and no singleton reads, otherwise, set to false
  strictPairing = false
  help = false
//Note 3: process makeVCF expects reference basename to end in .fasta 
//rawReference = "$PWD/D70_reference_genome/MT081369_JPN_1989-23292.fasta"
//Note 4: process makeGenomeCov expects reference basename to end in .sizes
//sizes = "$PWD/D70_reference_genome/MT081369_JPN_1989-23292.sizes"
}

manifest {
  description = 'Generate consensus genomes from paired fastq files mapped to reference at minimum 1X and 25X coverage.'
  author = 'Darlene D. Wagner'
  mainScript = 'bowtieConsensusFromPairedFastq.nf'
}
